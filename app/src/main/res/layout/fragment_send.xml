<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/write_back_ground"
    android:paddingTop="5dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/write_img"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:paddingStart="0dp"
                    android:src="@drawable/bottom1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:paddingStart="5dp"
                        android:text="USERNAME"
                        android:textColor="#ADADAD"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/when"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="5dp"
                        android:text="1분전"
                        android:textColor="#ADADAD"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:text="테스트 메시지"
                android:textColor="#A1A1A1"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inside"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:text="테스트 메시지메시지메시지메시지메시지메시지메시지메시지메시지메시지메시지메시지메시지메시지메시지메시지메시지메시지"
                android:textColor="#A1A1A1"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:background="#5902001C">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/subtitle_top_back">
                    <ImageView
                        android:id="@+id/subtitle_img"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:paddingStart="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/bottom3"/>
                    <EditText
                        android:id="@+id/submit"
                        android:hint="댓글을 입력하세요."
                        android:textColor="#9BFFFFFF"
                        android:textColorHighlight="#FFFFFF"
                        android:layout_width="282dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/subtitle_img"/>
                    <Button
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_toRightOf="@+id/submit"
                        android:layout_centerInParent="true"
                        android:background="@drawable/comment"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:orientation="vertical">

                    <GridView
                        android:id="@+id/subtitles"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:verticalSpacing="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>