<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingTop="5dp"
    android:background="@drawable/group_write_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <ImageView
            android:id="@+id/write_img"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:src="@drawable/bottom1"/>
        <LinearLayout
            android:layout_width="245dp"
            android:layout_height="match_parent" android:orientation="vertical">
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="bottom" android:text="USERNAME" android:layout_weight="1"
                android:textStyle="bold" android:textColor="#ADADAD" android:paddingStart="5dp"/>
            <TextView
                android:id="@+id/when"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textColor="#ADADAD" android:text="1분전" android:layout_weight="1" android:textSize="10dp"
                android:paddingStart="5dp"/>
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:id="@+id/howmuchseen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            android:textColor="#A1A1A1"
            android:text="52"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/title"
        android:text="테스트 메시지"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#A1A1A1"
        android:paddingStart="15dp"/>
    <TextView
        android:id="@+id/inside"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="테스트 메시지"
        android:textSize="24dp"
        android:textColor="#A1A1A1"
        android:paddingStart="17dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/commentbutton"/>
</LinearLayout>